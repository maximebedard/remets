<%= select_tag(name, option_tags,
  options.merge(
    class: "rs-pp selectized",
    multiple: "multiple",
    placeholder: "Pick some people",
    id: name.parameterize("_"),
    data: {
      "selectize" => true,
      "initial-items" => values.map { |v| Acquaintance.from_user(v.user) }.to_json
    },
  )) %>
