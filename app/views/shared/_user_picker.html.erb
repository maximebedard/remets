<%= select_tag(name, option_tags,
  options.merge(
    class: "remets-pp selectized",
    multiple: "multiple",
    placeholder: "Pick some people",
    id: name.parameterize("_"),
  )) %>

<%= content_for :scripts do %>
  <script type="text/javascript">
    remetsSelectize("<%= "##{name.parameterize('_')}" %>");
  </script>
<% end %>
