<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= render partial: "document_panel", object: @document, as: :document,
        locals: { title: "Document" } %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12">
      <% if @document.document_matches.size > 0  %>
        <%= render @document.document_matches %>
      <% else %>
        <div class="remets-panel remets-panel--default">
          <div class="remets-panel__heading monospaced">
            <h3 class="remets-panel__title">
              No matches found
            </h3>
          </div>
          <div class="remets-panel__item">
            <p>No matches have been found with the selected file.</p>
          </div>
        </div>

      <% end %>

    </div>
  </div>
</div>
