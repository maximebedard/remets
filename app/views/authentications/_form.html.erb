<%= form_for(:authentication, url: auth_path) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, value: @email, class: "form-control", placeholder: "Email" %>
  </div>
  <div class="form-group">
    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
  </div>
  <div class="checkbox">
    <%= f.label :remember_me do %>
      <%= f.check_box :remember_me %>
      <span>Remember me!</span>
    <% end %>
  </div>
  <%= f.submit "Sign in!", class: "btn btn-large btn-success form-control" %>
<% end %>
<div class="stroked"><span class="stroked--text">or</span></div>
<div class="form-group">
  <%= link_to "Register!", new_registration_path,
  class: "btn btn-large btn-info form-control" %>
</div>
<div class="form-group">
  <%= link_to "Sign-up with Google!", auth_authorize_path(:google),
  class: "btn btn-large btn-primary form-control" %>
</div>
