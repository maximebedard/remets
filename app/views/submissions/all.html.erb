<div class="container">
  <div class="row">
    <!-- main panel -->
    <div class="col-lg-9">
      <div class="remets-panel remets-panel--default">
        <div class="remets-panel__heading">
          <h3 class="remets-panel__title">Submissions</h3>
        </div>
        <% @submissions.group_by(&:handover).each do |handover, submissions| %>
          <div class="remets-panel__item">
            <div class="remets-panel__item__title">
              <h1><%= handover.title %></h1>
              <h2>Organization Name</h2>
              <div>
                Versions : <%= submissions.size %>
              </div>
            </div>
            <div class="remets-panel__item__description">
              <ul>
                <% submissions.each do |submission| %>
                  <li>a</li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- actions -->
    <div class="col-lg-3">
      <div class="remets-panel remets-panel--red">
        <div class="remets-panel__heading">
          <h3 class="remets-panel__title">Actions</h3>
        </div>
        <div class="remets-panel__item">
          <div class="dropdown">
            <a id="dLabel" data-target="#" href="http://example.com" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-filter"></i>
              Filter By
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" aria-labelledby="dLabel">
              <li><a href="#">Action</a></li>
              <li><a href="#">Action</a></li>
              <li><a href="#">Action</a></li>
            </ul>
          </div>
        </div>
        <div class="remets-panel__item">
          <div class="dropdown">
            <a id="dLabel" data-target="#" href="http://example.com" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <i class="fa fa-sort"></i>
              Sort By
              <span class="caret"></span>
            </a>
            <ul class="dropdown-menu" aria-labelledby="dLabel">
              <li><a href="#">Action</a></li>
              <li><a href="#">Action</a></li>
              <li><a href="#">Action</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
