<div class="container">
  <div class="row">
     <% if @submissions.empty? %>
    <div class="col-lg-9">
      <div class="rs-panel rs-panel--default">
        <div class="rs-panel__heading">
          <h3 class="rs-panel__title">Submissions</h3>
        </div>
          <div class="rs-panel__item">
            No Submissions found!
          </div>
      </div>
    </div>
    <% end %>
    <% @submissions.group_by(&:evaluation).each do |evaluation, submissions| %>
       <div class="col-lg-9">
          <div id="evaluation-<%= evaluation.id %>" class="rs-panel rs-panel--default">
            <div class="rs-panel__heading">
              <h3 class="rs-panel__title"><%= evaluation.title %> - <%= l evaluation.due_date %></h3>
            </div>
              <%= render partial: "evaluation", object: evaluation %>
              <%= render submissions.reverse %>
          </div>
        </div>
    <% end %>
    <%= render partial: "shared/filters" %>
  </div>
</div>
