<div class="remets-panel__item">
  <div class="remets-panel__item__content">
    <% if submission_counter == 0 %>
      <span class="label label-primary">To be evaluated</span>
    <% else %>
      <span class="label label-warning">Archived</span>
    <% end %>
    <% if submission.user.id != current_user.id %>
    <div>
      <h4>Submitted by: <%= submission.user.name %></h4>
    </div>
    <% end %>
    <div>Handed in on: <%= l submission.created_at %></div>
    <br>
    <div>
      <ul>
        <%= render submission.documents %>
      </ul>
    </div>
  </div>
    <div class="remets-panel__item__actions">
      <%= link_to submission_path(submission), class: "btn btn-primary btn-sm" do %>
        <i class="fa fa-eye"></i> View
      <% end %>
      <% if local_assigns[:current_submission].present? %>
        <%= link_to diff_submission_path(submission, compared_id: current_submission.id), class: "btn btn-default btn-sm" do %>
          <i class="fa fa-compress"></i> Compare
        <% end %>
      <% end %>
    </div>
</div>
