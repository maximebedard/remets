<div class="rs-panel rs-panel--default">
  <div class="rs-panel--heading">
    <h3 class="rs-panel--title"><%= title %></h3>
    <div>
      <% if local_assigns[:hide_menu].blank? %>
        <%= link_to(evaluation_path(uuid: submission.evaluation.uuid),
          class: "btn btn-transparent btn-sm") do %>
          <i class="fa fa-chevron-left"></i> View evaluation
        <% end %>
        <%= link_to(edit_submission_grade_path(submission),
          class: "btn btn-transparent btn-sm") do %>
          <i class="fa fa-comment"></i> Grade
        <% end %>
        <%= link_to("#",
          class: "btn btn-transparent btn-sm") do %>
          <i class="fa fa-download"></i> Download all
        <% end %>
      <% end %>
    </div>
  </div>
  <%= render partial: "submission_detail", object: submission, as: :submission %>
</div>
