<div class="rs-panel--item">
  <div class="rs-panel--item--title">
  </div>
  <div class="rs-panel--item--description">
    <p class="light-text">
      <%= l authorization.created_at %>
    </p>
    <p>
      <%= authorization.name %><br>
      <%= authorization.email %>
    </p>
  </div>
  <div class="rs-panel--item--actions">
    <%= link_to auth_authorize_path(authorization.provider), class: "btn btn-danger btn-sm" do %>
      <i class="fa fa-times"></i> Revoke
    <% end %>
  </div>
</div>
