<div class="container">
  <%= form_for [:account, @organization] do |f| %>
    <div class="row">
      <div class="col-lg-12">
        <h1>New Organization</h1>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control", placeholder: "Name" %>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-lg-12">
        <%= f.submit 'Create Organization', class: 'btn btn-success' %>
      </div>
    </div>
  <% end %>
</div>
