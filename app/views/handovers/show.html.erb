<div class="container">
  <div class="row">
    <div class="col-lg-offset-2 col-lg-8">
      <div class="remets-panel remets-panel--default">
        <div class="remets-panel__heading">
          <h3 class="remets-panel__title"><%= @handover.title %></h3>
          <%= link_to(edit_handover_path(uuid: @handover.uuid), class: "btn btn-transparent btn-sm") do %>
          <i class="fa fa-pencil"></i> Edit
          <% end %>
        </div>
        <div class="remets-panel__item">
          <%= render partial: "detail", object: @handover %>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
     <div class="col-lg-offset-2 col-lg-8">
      <div class="remets-panel remets-panel--default">
        <div class="remets-panel__heading">
          <h3 class="remets-panel__title">Submissions</h3>
        </div>
        <%= render partial: "submission", collection: @handover.submissions %>
      </div>
    </div>
  </div>
</div>
