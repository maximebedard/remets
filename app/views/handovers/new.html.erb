<% form_for @handover, html: { multipart: true, class: "dropzone" } do |f| %>
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1>New handover</h1>
      </div>
      <div class="col-lg-12">
        <%= f.label :title %>
        <%= f.text_field :title %>

        <%= render partial: "shared/dropzone", locals: { record: @handover, form: f } %>

        <%= f.submit %>
      </div>
    </div>
  </div>
<% end %>
