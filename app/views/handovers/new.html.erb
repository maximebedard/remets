<div class="container">
  <%= form_for @handover, html: { multipart: true, class: "dropzone" } do |f| %>
    <div class="row">
      <div class="col-lg-12">
        <h1>New Handover Box</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <label for="handoverName">Handover Title</label>
          <input type="text" class="form-control" id="handoverName" placeholder="Handover Title">
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-6">
        <div class="form-group">
          <label for="handoverDescription">
            Description
          </label>
          <textarea class="form-control" id="handoverDescription"
            placeholder="This textbox supports #markdown!" rows="5"></textarea>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <label>
          Related files for the Handovers
          <a href="#" data-toggle="modal" data-target="#infoModal">
            <i class="fa fa-info-circle"></i>
          </a>
        </label>
        <%= render partial: "shared/dropzone",
          locals: {
            record: @handover,
            form: f,
            method: :reference_documents
          }
        %>

        <%= render partial: "shared/dropzone",
          locals: {
            record: @handover,
            form: f,
            method: :boilerplate_documents
          }
        %>
        <div class="dz-controls">
          <%= f.submit 'Create Submission', class: 'btn btn-success' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<%= render(layout: "shared/info_modal",
  locals: { title: "Related Files?", label: "filesLabel", id: "infoModal" }) do %>
  <p>
    Is there any documents you wish to attach to this handover that will help students? Maybe a template file, an interesting PDF or a picture that's worth a thousand words?
  </p>
  <p>
    Go a ahead and include it!
  </p>
<% end %>
